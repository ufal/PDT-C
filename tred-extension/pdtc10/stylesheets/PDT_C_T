# detailed discourse information:

node:<? '#{#ff710c}'?><?
     (PDT_C_T::get_display_discourse() eq '1') ? (
         join "\n", map "connective" . (PDT_C_T::is_secondary($_) ? "_sec: " : ": ") . PDT_C_T::get_surface_connective($_), sort PDT_C_T::compare_target_nodes_positions_deepord grep {defined and length} ListV($this->{discourse})
     ) : ()
?>

node:<? '#{#ff710c}'?><?
      if (PDT_C_T::get_display_discourse() eq '1') {
        my $conn_ext = join('', map {PDT_C_T::get_surface_connective_ext($_)} grep {defined and length} ListV($this->{discourse}));
        ($conn_ext) ? (
           join "\n", map "ex-con: " . PDT_C_T::get_surface_connective_ext($_), sort PDT_C_T::compare_target_nodes_positions_deepord grep {defined and length} ListV($this->{discourse})
        ) : ()
      }
?>

node:<? '#{#ff710c}'?><?
     (PDT_C_T::get_display_discourse() eq '1') ? (
       join "\n", map "range: " . (defined($_->{'start_range'}) ? $_->{'start_range'} : '-') . '->' . (defined($_->{'target_range'}) ? $_->{'target_range'} : '-'), sort PDT_C_T::compare_target_nodes_positions_deepord grep {defined and length} ListV($this->{discourse})
     ) : ()
?>

node:<? '#{#ff710c}'?><?
     (PDT_C_T::get_display_discourse() eq '1') ? (
       join "\n", map $_->{comment}, sort PDT_C_T::compare_target_nodes_positions_deepord grep {defined and length} ListV($this->{discourse})
     ) : ()
?>

node:<? '#{#ff710c}'?><?
     (PDT_C_T::get_display_discourse() eq '1') ? (
       grep {defined and length} ($this->{discourse_comment}) ? (
         $this->{discourse_comment}
       ) : ()
     ) : ()
?>


hint:<?
   my @hintlines;
   if ($this eq $root) {
     push @hintlines, "genre: ".PDT_C_T::get_document_genre();
   }
   if (ref($this->{gram})) {
     foreach my $gram (sort keys %{$this->{gram}}) {
       push @hintlines, "gram/".$gram.": ".$this->{gram}->{$gram} if $this->{gram}->{$gram}
     }
   }
   push@hintlines, "discourse_feature: " . $${discourse_feature} if $${discourse_feature};
   push@hintlines, "discourse_macrostructure: " . $${discourse_macrostructure} if $${discourse_macrostructure};
   push@hintlines, "is_list_entry: 1" if PDT_C_T::is_list_entry($this);
   push@hintlines, "is_dsp_root: 1" if $${is_dsp_root};
   push@hintlines, "is_name_of_person: 1" if $${is_name_of_person};
   push@hintlines, "quot: ". join(",",map{$_->{type}}ListV($this->{quot})) if $${quot};
   join"\n", @hintlines
?>
