#!btred -N -T -e checks()
# -*- mode: cperl -*-

sub checks {
    if ($this->parent) {
        if (($root->{errors}[0] // "") ne "OK"
            && $this->{errors}
        ) {
            print join(';', @{ $this->{errors} }), "\t";
            FPosition() ;
        }
    } else {
        PML_A_Anot::CheckErrors();
    }
}
