#!btred -NT -e onen()
# -*- mode: cperl -*-
use warnings;
use strict;

sub onen {
    ChangingFile(0);
    return if $root == $this || $this->{t_lemma} ne '#PersPron';

    if (my $anode = PML_T::GetALexNode($this)) {
        my $lemma = $anode->attr('m/lemma');
        if ($lemma eq 'onen') {
            ChangingFile(1);
            $this->{t_lemma} = 'onen';
            FPosition();
        }
    }
}
